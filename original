const pytext = `#!/usr/bin/env python2

import numpy as np
import rospy
from std_msgs.msg import Bool
from std_msgs.msg import Int8

pub=rospy.Publisher('/button', Int8, queue_size=1)
stop_pub=rospy.Publisher('/stopButton', Int8, queue_size=1)

rospy.init_node('simple_gui', anonymous=True)

def button_clicked(num):
    if num == 10:
        stop_pub.publish(num)
    else:
        pub.publish(num)
`;

    function rplc(){
	let block = pytext;
	console.log(block);
	const lineArr = block.split('\n');
        for(const line in lineArr){
		console.log(typeof line);
	}	
    }
    rplc();
    async function loadPyodideAndRun() {
      // Load Pyodide and other packages
      const pyodide = await loadPyodide({
        indexURL: 'https://cdn.jsdelivr.net/pyodide/v0.18.1/full/'
      });

      // Run Python code using Pyodide
      await pyodide.loadPackage('numpy');
      await pyodide.loadPackage('rospy');
      pyodide.runPython(pytext);
    }

    // Load Pyodide and run the Python code when the page is ready
    loadPyodideAndRun();
  </script>
